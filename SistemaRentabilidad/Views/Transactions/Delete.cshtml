@model SistemaRentabilidad.Models.Transaction

@{
    Layout = null;
}


<div>
    <h3 class="text-center text-danger" style="margin-top: 0%">¿Está seguro de eliminar la transacción?</h3>
    <h5 class="text-center">Al hacerlo ésta dejará de figurar en la lista de transacciones al crear una nueva Planilla.</h5>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="text-center" style="margin-top: 7%">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            <button type="submit" class="btn btn-danger">Eliminar &nbsp;<span class="glyphicon glyphicon-trash"></span></button>
        </div>
    }
</div>
